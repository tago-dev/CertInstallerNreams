<Window x:Class="CertInstallerNreams.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CertInstallerNreams"
        mc:Ignorable="d"
        Title="CertInstaller" Height="276" Width="494">
    
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBlock Text="Instalador do Certificado de Rede" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <Button x:Name="InstallButton" 
                Content="Baixar e Instalar Certificado" 
                Height="50" 
                Width="250"
                FontWeight="Bold" 
                FontSize="14"
                Click="InstallButton_Click"/>

            <Label x:Name="StatusLabel" HorizontalAlignment="Center" Margin="0,20,0,0" FontSize="14"/>

        </StackPanel>
    </Grid>
</Window>
