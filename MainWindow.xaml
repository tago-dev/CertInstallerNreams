<Window x:Class="CertInstallerNreams.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CertInstallerNreams"
        mc:Ignorable="d"
        Title="CertInstaller" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel VerticalAlignment="Center">
            <Label Content="Caminho do Certificado:" FontWeight="Bold" Height="24" Width="300"/>
            <TextBox x:Name="CertificatePathTextBox" Margin="0,0,0,10" IsReadOnly="True" Height="24" Width="300"/>
            <Button x:Name="SelectFileButton" Content="Selecionar Certificado..." Height="30" Margin="0,0,0,10" Click="SelectFileButton_Click" Width="300" />
            <Button x:Name="InstallButton" Content="Instalar no Windows (para Chrome/Edge)" Height="40" FontWeight="Bold" Click="InstallButton_Click" Width="300"/>
            <Label x:Name="StatusLabel" HorizontalAlignment="Center" Margin="0,20,0,0" FontSize="14"/>
        </StackPanel>
    </Grid>
</Window>
